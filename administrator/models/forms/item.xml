<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="default">
		<field
			name="id"
			type="hidden"
			/>		

		<field
			name="assignment_id"
			type="assignments"
			label="Assignment"
			required="true"
			/>	
			
		<field
			name="date"
			type="calendar"
			label="Date"
			required="true"
			/>	

		<field
			name="time_so"
			type="text"
			label="Time S.O."
			required="true"
			class="time"
			/>	

		<field
			name="time_od"
			type="text"
			label="Time O.D."
			required="true"
			class="time"
			/>

		<field
			name="hours"
			type="text"
			label="Hours"
			readonly="true"
			class="time"
			/>			
			

		<field
			name="address"
			type="text"
			label="Location or Address"
			required="false"
			/>

		<field
			name="details"
			type="text"
			label="Details or Comments"
			required="false"
			/>
			
	</fieldset>
	
	<fieldset name="newuser">
		<field
			name="user_id"
			type="user"
			label="User"
			readonly="false"
			/>
			

		<field
			name="unitno"
			type="text"
			label="Unit No"
			readonly="false"
			/>

		<field
			name="name"
			type="text"
			label="Name"
			readonly="false"
			/>

		<field
			name="email"
			type="text"
			label="Email"
			readonly="false"
			/>		
	</fieldset>
	
	<fieldset name="olduser">
		<field
			name="user_id"
			type="user"
			label="User"
			required="true"
			readonly="false"
			/>

		<field
			name="unitno"
			type="text"
			label="Unit No"
			readonly="false"
			/>

		<field
			name="name"
			type="text"
			label="Name"
			readonly="false"
			/>

		<field
			name="email"
			type="text"
			label="Email"
			readonly="false"
			/>		
	</fieldset>	
</form>